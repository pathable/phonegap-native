<?xml version='1.0' encoding='utf-8'?>
<widget id="com.pathable.phonegap" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>PathableGC 2015 PhoneGap</name>
    <description>
        Model for Pathable Phonegap apps.
    </description>
    <author email="support@pathable.com" href="https://pathable.com/">
        Pathable
    </author>
    <content src="index.html" />
    <preference name="phonegap-version" value="cli-5.2.0" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-installLocation" value="auto" />
    <preference name="android-minSdkVersion" value="10" />
    <preference name="android-maxSdkVersion" value="22" />
    <preference name="android-targetSdkVersion" value="17" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="false"/>
    <preference name="StatusBarBackgroundColor" value="#000000"/>
    <preference name="StatusBarStyle" value="blackopaque" />
    <preference name="SplashScreen" value="www/res/screen/ios/Default@2x.png" />
    <preference name="FadeSplashScreen" value="true"/>
    <preference name="FadeSplashScreenDuration" value="4"/>
    <preference name="ShowSplashScreenSpinner" value="true"/>
    <preference name="AutoHideSplashScreen" value="false" />
    
    <plugin name="org.apache.cordova.camera" />
    <plugin name="org.apache.cordova.console" />
    <plugin name="org.apache.cordova.device" />
    <plugin name="org.apache.cordova.dialogs" />
    <plugin name="org.apache.cordova.file" />
    <plugin name="org.apache.cordova.network-information" />
    <plugin name="org.apache.cordova.splashscreen" />
    <icon src="icon.png" />
    <icon platform="android" qualifier="ldpi" src="www/res/icon/android/icon-36-ldpi.png" />
    <icon platform="android" qualifier="mdpi" src="www/res/icon/android/icon-48-mdpi.png" />
    <icon platform="android" qualifier="hdpi" src="www/res/icon/android/icon-72-hdpi.png" />
    <icon platform="android" qualifier="xhdpi" src="www/res/icon/android/icon-96-xhdpi.png" />
    <icon platform="blackberry" src="www/res/icon/blackberry/icon-80.png" />
    <icon platform="blackberry" state="hover" src="www/res/icon/blackberry/icon-80.png" />
    <icon platform="ios" height="57" src="www/res/icon/ios/icon-57.png" width="57" />
    <icon platform="ios" height="72" src="www/res/icon/ios/icon-72.png" width="72" />
    <icon platform="ios" height="114" src="www/res/icon/ios/icon-57-2x.png" width="114" />
    <icon platform="ios" height="144" src="www/res/icon/ios/icon-72-2x.png" width="144" />
    <icon platform="webos" src="www/res/icon/webos/icon-64.png" />
    <icon platform="winphone" src="www/res/icon/windows-phone/icon-48.png" />
    <icon platform="winphone" role="background" src="www/res/icon/windows-phone/icon-173-tile.png" />
    <splash platform="android" qualifier="port-ldpi" src="www/res/screen/android/screen-ldpi-portrait.png" />
    <splash platform="android" qualifier="port-mdpi" src="www/res/screen/android/screen-mdpi-portrait.png" />
    <splash platform="android" qualifier="port-hdpi" src="www/res/screen/android/screen-hdpi-portrait.png" />
    <splash platform="android" qualifier="port-xhdpi" src="www/res/screen/android/screen-xhdpi-portrait.png" />
    <splash platform="blackberry" src="www/res/screen/blackberry/screen-225.png" />
    <splash platform="ios" height="480" src="www/res/screen/ios/screen-iphone-portrait.png" width="320" />
    <splash platform="ios" height="960" src="www/res/screen/ios/screen-iphone-portrait-2x.png" width="640" />
    <splash platform="ios" height="1136" src="www/res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" />
    <splash platform="ios" height="1024" src="www/res/screen/ios/screen-ipad-portrait.png" width="768" />
    <splash platform="ios" height="768" src="www/res/screen/ios/screen-ipad-landscape.png" width="1024" />
    <splash platform="winphone" src="www/res/screen/windows-phone/screen-portrait.jpg" />
    <access origin="*" />
    <plugin name="cordova-plugin-whitelist" source="npm" version="1.0.0" />
    <!-- Pushwoosh plugin -->
    <plugin name="pushwoosh-pgb-plugin" source="npm" />
    <plugin name="phonegap-plugin-barcodescanner" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <access origin="*.pushwoosh.com"/>
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
